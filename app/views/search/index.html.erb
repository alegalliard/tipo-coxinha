<h1>Resultados da busca</h1>
<% if @users.any? %>
<ul class="search-list">
  <% @users.each do |user| %>
    <li id="cook-<%= user.id %>">
      <div class="image-block">
        <%= image_tag user.avatar.url(:medium), {class: 'img-fluid'} %>
      </div>
      <div class="desc-block">
        <h2><%= user.name %></h2>
        <p><%= user.description %></p>
        <%= link_to 'Ver detalhes', profile_path(user.id), class: 'btn btn-danger' %>
      </div>
    </li>
  <% end %>
</ul>
<% else %>
  <div class="alert alert-warning">
    <%= t('general.search_no_results') %>
  </div>
  <%= link_to t('general.back'), root_path %>
<% end %>
